<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cadastro de Demandas</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Sistema de Demandas</a>
            <button class="btn btn-warning" onclick="window.location.href='/logout'">Logout</button>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h2 class="h4 mb-0">Cadastro de Demandas</h2>
            </div>
            <div class="card-body">
                <form method="POST" enctype="multipart/form-data" 
                      <% if (demanda && demanda.id) { %> 
                          action="/update/<%= demanda.id %>" 
                      <% } else { %> 
                          action="/save/" 
                      <% } %> >
                    
                    <!-- Nome da Demanda -->
                    <div class="mb-3">
                        <label for="nome" class="form-label">Nome da Demanda</label>
                        <input type="text" class="form-control" id="nome" name="nome" placeholder="Digite a demanda..."
                            <% if (demanda) { %> value="<%= demanda.nome %>" <% } %> required>
                    </div>
                    
                    <!-- Upload de Arquivo -->
                    <div class="mb-3">
                        <label for="file" class="form-label">Upload de Arquivo</label>
                        <input type="file" class="form-control" id="file" name="file">
                        <% if (demanda && demanda.file) { %>
                            <div class="mt-2">
                                <a href="/<%= demanda.file %>" target="_blank" class="btn btn-outline-success btn-sm">Ver Upload</a>
                                <a href="/deleteUpload/<%= demanda.id %>" class="btn btn-outline-danger btn-sm">Excluir</a>
                            </div>
                        <% } %>
                    </div>
                    
                    <!-- Input Hidden ID -->
                    <% if (demanda && demanda.id) { %> 
                        <input type="hidden" name="id" value="<%= demanda.id %>"> 
                    <% } %>
                    
                    <!-- BotÃ£o Salvar -->
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-success">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
</body>

</html>
