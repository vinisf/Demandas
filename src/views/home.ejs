<%- include('partials/header.ejs') %>
    <%- include ('partials/navbar.ejs') %>

        <!-- Conteúdo específico da página -->
        <div class="container mt-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">Lista de Demandas</h1>
                <a class="btn btn-success" href="/create">Criar Nova Demanda</a>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nome</th>
                            <th scope="col">Status</th>
                            <th scope="col">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% demandas.forEach(demanda=> { %>
                            <tr>
                                <th scope="row">
                                    <%= demanda.id %>
                                </th>
                                <td>
                                    <%= demanda.nome %>
                                </td>
                                <td>
                                    <span class="badge <%= statusLabels[demanda.status].class %>">
                                        <%= statusLabels[demanda.status].text %>
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex flex-wrap gap-2">
                                        <a href="/edit/<%= demanda.id %>" class="btn btn-warning btn-sm">Editar</a>
                                        <form method="POST" action="/delete" onsubmit="confirmarDelecao(event, this)">
                                            <input type="hidden" name="id" value="<%= demanda.id %>">
                                            <button type="submit" class="btn btn-danger btn-sm">Deletar</button>
                                        </form>
                                        <% if (demanda.file) { %>
                                            <a href="<%= demanda.file %>" class="btn btn-success btn-sm"
                                                target="_blank">Ver Upload</a>
                                            <% } %>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <%- include('partials/footer.ejs') %>

            <script>
                function confirmarDelecao(event, form) {
                    event.preventDefault();
                    const decision = confirm("Você quer deletar esta demanda?");
                    if (decision) {
                        form.submit();
                    }
                }
            </script>