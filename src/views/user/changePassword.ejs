<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Alteração de Senha</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body class="bg-light">
    <div class="container d-flex align-items-center justify-content-center min-vh-100">
        <div class="card shadow-lg" style="width: 100%; max-width: 500px;">
            <div class="card-header bg-info text-white text-center">
                <h2 class="mb-0">Alteração de Senha</h2>
            </div>
            <div class="card-body">
                <form method="POST" action="/user/changePasswordDo">
                    
                    <!-- Campo Nova Senha -->
                    <div class="mb-3">
                        <label for="senha" class="form-label">Nova Senha</label>
                        <input class="form-control" name="senha" type="password" id="senha" placeholder="******" onchange="confereSenha()" required>
                    </div>

                    <!-- Campo Repetir Senha -->
                    <div class="mb-3">
                        <label for="senha2" class="form-label">Repetir Senha</label>
                        <input class="form-control" name="senha2" type="password" id="senha2" placeholder="******" onchange="confereSenha()" required>
                    </div>

                    <!-- Token (hidden) -->
                    <input class="form-control" name="token" value="<%= token %>" hidden>

                    <!-- Botão Enviar -->
                    <button type="submit" class="btn btn-primary w-100">Enviar</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

    <script>
        function confereSenha() {
            var senha = document.querySelector('input[name=senha]');
            var senha2 = document.querySelector('input[name=senha2]');
            if (senha.value === senha2.value) {
                senha2.setCustomValidity('')
            } else {
                senha2.setCustomValidity('As senhas não conferem');
            }
        }
    </script>
</body>

</html>
