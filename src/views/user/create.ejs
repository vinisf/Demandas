<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cadastro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body>
    <br>
    <div class="container">
        <hr>
        <div class="card">
            <div class="card-header">
                <h2>Cadastro </h2>
            </div>
            <div class="card-body">
                <form method="POST" enctype="multipart/form-data" <% if (user) { %> action="/user/update/<%= user.id %>"
                        <% }else{ %> action="/user/save/" <%} %> >
                                
                                <div class="mb-3">
                                    <label for="">E-mail</label>

                                    <input class="form-control" name="email" type="email"
                                        placeholder="email@exemplo.com">

                                </div>
                                <div class="mb-3">
                                    <label for="">Senha</label>

                                    <input class="form-control" name="senha" type="password" placeholder="******" onchange="confereSenha()" required>

                                </div>
                                <div class="mb-3">
                                    <label for="">Repetir senha</label>
                                    <input class="form-control" name="senha2" type="password" placeholder="******" onchange="confereSenha()" required>

                                </div>

                                <% if (user) { %> <input type="hidden" name="id"  value="<%= user.id %>">
                                    <% } %>
                                    <button type="submit" class="btn btn-primary pull-right botao_reset_senha">Enviar</button>
                                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
    <script>
        function confereSenha() {
            senha = document.querySelector('input[name=senha]');
            senha2 = document.querySelector('input[name=senha2]');
            if (senha.value === senha2.value) {
                senha2.setCustomValidity('')
            } else {
                senha2.setCustomValidity('As senhas n√£o conferem');
            }
        }

    </script>
    </script>
</body>

</html>